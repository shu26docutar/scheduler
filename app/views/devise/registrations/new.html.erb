<div class="sign-in-contents">
  <div class="top-content">
    <div class="title">
      <%= link_to 'MemoSuke', root_path, class: "title-path" %>
    </div>
  </div>

  <div class="containers row">
    <div class="row-content">
      <div class="left-form-area">
        <div class="user-form-confirm">
          <%= render "devise/shared/links" %>
          <%#= link_to "Googleで登録", user_google_oauth2_omniauth_authorize_path, method: :post%>
        </div>
      </div>

      <div class="right-form-area">
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :name %> <em>(最大6文字)</em><br />
          <%= f.text_field :name, autofocus: true, maxlength: "6" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email %>
        </div>
                <%if @sns_id.present? %>
                <%= hidden_field_tag :sns_auth, true %>
                <% else %>
            <div class="field">
            <%= f.label :password %>
            <% @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <br />
            <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
              <% end %>

        <div class="actions">
          <%= f.submit "サインイン", class: "login-push-btn" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
