<% if user_signed_in? %>
  <div class="side-bar-header">
    <div class="add-btn">
      <%= link_to new_room_path do %>
        <span class='material-icons'>add</span>
      <% end %>
    </div>
  </div>

  <div class="rooms">
    <% current_user.rooms.each do |room| %>
      <div class="room">
        <%= link_to room.name, room_memos_path(room), id: "room-name" %>
        <% unless @room == nil  %>
        <%= link_to '削除', room_path(@room), method: :delete, class: "delete-btn", data: { confirm: '削除しますか？' } %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>